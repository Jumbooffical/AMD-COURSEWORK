@{
    ViewData["Title"] = "URL Shortener";
    var shortUrl = ViewData["ShortUrl"] as string;
    var error = ViewData["Error"] as string;
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">URL Shortener</h1>
    <form asp-action="ShortenUrl" asp-controller="Home" method="post" class="mb-3">
        <div class="input-group">
            <input type="url" name="originalUrl" class="form-control" placeholder="Enter the original URL" required />
            <button type="submit" class="btn btn-primary">Shorten</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(shortUrl))
    {
        <div class="alert alert-success text-center">
            Shortened URL: <a href="@shortUrl" target="_blank">@shortUrl</a>
        </div>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger text-center">
            @error
        </div>
    }
</div>
